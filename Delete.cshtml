@model NBA_ManagementSystem.Models.Team

@{
    ViewBag.Title = "Delete";
}

<h2>Are you sure you want to delete this team?</h2>

<div>
    <h4>@Model.Name</h4>
    <p>City: @Model.City</p>
    <p>Head Coach: @Model.HeadCoach</p>
    <p>Games Won: @Model.GamesWon</p>
    <p>Games Lost: @Model.GamesLost</p>
</div>

@using (Html.BeginForm("DeleteConfirmed", "Teams", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
}

<p>
    @Html.ActionLink("Back to List", "Index")
</p>
