@model NBA_ManagementSystem.Models.Team

@{
    ViewBag.Title = "Team Details";
}

<h2>Team Details</h2>

<table class="table">
    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>City</th>
        <td>@Model.City</td>
    </tr>
    <tr>
        <th>Telephone</th>
        <td>@Model.Telephone</td>
    </tr>
    <tr>
        <th>Owner</th>
        <td>@Model.Owner</td>
    </tr>
    <tr>
        <th>Head Coach</th>
        <td>@Model.HeadCoach</td>
    </tr>
    <tr>
        <th>Games Won</th>
        <td>@Model.GamesWon</td>
    </tr>
    <tr>
        <th>Games Lost</th>
        <td>@Model.GamesLost</td>
    </tr>
</table>

<p>
    @Html.ActionLink("Back to List", "Index")
</p>
